{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 3am on the first day of the month"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "groupName": "dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "actions",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
